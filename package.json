{
	"name": "fuji-site",
	"description": "Static website at fujidesktop.app",
	"license": "GPL-3.0-only",
	"version": "1.0.0",
	"type": "module",
	"private": true,
	"repository": "git@github.com:zootella/fuji-site.git",
	"scripts": {
		"local": "nuxt dev",
		"build": "nuxt build",
		"size": "nuxi analyze --no-serve",
		"preview": "yarn build && wrangler dev",
		"postinstall": "nuxt prepare",
		"deploy": "yarn build && wrangler deploy",
		"cf-typegen": "wrangler types",
		"upgrade-wash": "yarn wash && rimraf yarn.lock",
		"wash": "rimraf .nuxt .output .wrangler .wrangler dist node_modules worker-configuration.d.ts"
	},
	"packageManager": "yarn@1.22.22",
	"dependencies": {
		"nuxt": "^3.17.2",
		"vue": "^3.5.13",
