	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250507.0",
		"@nuxtjs/tailwindcss": "^6.14.0",
		"@tailwindcss/forms": "^0.5.10",
		"nitro-cloudflare-dev": "^0.2.2",
		"nitropack": "^2.11.11",
		"nuxi": "^3.25.1",
		"wrangler": "^4.14.3"
	}
}
